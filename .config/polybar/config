[module/i3]
type = internal/i3
format = <label-state>

;pin-workspaces = true
;wsname-maxlen = 1
;index-sort = true

label-focused = %{F#55aa55}%index%%{F}
label-focused-background = #ee333333
label-focused-underline= #cc333333
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2

label-urgent = ! %index%
label-urgent-background = #bd2c40
label-urgent-padding = 2

label-visible = x %index%
label-visible-foreground = #444
label-visible-padding = 2

[module/vpn-name]
type = custom/script
exec-if = pgrep -x openvpn
exec =  nmcli --terse -f TYPE,NAME conn show --active | sed -n 's/^vpn://p'
interval = 0.25
label = %output%

[module/vpn-ip]
type = custom/script
exec-if = pgrep -x openvpn
exec = dig TXT +short o-o.myaddr.l.google.com @ns1.google.com | awk -F'"' '{ print $2}'
interval = 0.25
label = VPN %{F#555}%output% %{F-}

[module/date]
type = internal/date
interval = 5

date = %m|%d
date-alt = " %Y-%m-%d"

time = %I:%M
time-alt = +%I:%M:%S

;format-prefix =
;format-prefix-foreground = ${colors.foreground-alt}
;format-underline = ${colors.color6}
format-padding = 2
label = %{T8}%date% %time%%{T-}

