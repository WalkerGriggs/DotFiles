# ----------------------------------------------------------------------
# file:       ~/.newsbeuter/config
# author:     WalkerGriggs  - www.walkergriggs.com
# date:       06/18/2016
# ----------------------------------------------------------------------

browser firefox

# Key Binds ------------------------------------------------------------

bind-key  "RIGHT"   open
bind-key  "LEFT" quit
bind-key  "ENTER" open-in-browser-and-mark-read

#macro o open-in-browser; toggle-article-read "read"

# Color Settings -------------------------------------------------------

color info green black
color listfocus green black
color listfocus_unread blue black

# Hide Settings --------------------------------------------------------

ignore-article "*" "title =~ \"Sponsor\""
ignore-article "*" "title =~ \"Advertisement\""
ignore-mode "display"

# General Settings -----------------------------------------------------
auto-reload yes
notify-xterm yes
show-read-feeds     no
always-display-description    yes
cleanup-on-quit       yes
feed-sort-order     date-dec
notify-always       no
notify-format       "Newsbeuter: %n unred articles within %f unread feeds"