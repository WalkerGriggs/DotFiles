[module/wired]
type = internal/network
interface = enp4s0
interval = 0.1

label-connected = %ifname%

; For connected IP
; %{F#66}%local_ip% %{F#ff}

label-disconnected = %{F#66}%ifname% Óáö
label-disconnected-foreground = #66

[module/vpn]
type = custom/script
exec-if = pgrep -x openvpn
exec =  nmcli --terse -f TYPE,NAME conn show --active | sed -n 's/^vpn://p'
interval = 0.25
label = %output%

[module/ip]
type = custom/script
exec = $HOME/Scripts/ip.sh
interval = 2
label = %{F#555}%output%
format = <label>

[module/volume]
type = internal/volume
speaker_mixer = Speaker
headphone_mixer = Headphone
headphone_control_numid = 9

format-volume = VOL <label-volume>
label-muted = muted
label-muted-foreground = #66

ramp-volume-0 = ÓÅé
ramp-volume-1 = ÓÅç
ramp-volume-2 = ÓÅê
ramp-volume-3 = ÓÅê

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = %layout%

[module/backlight]
type = internal/backlight
card = intel_backlight
format = BLT <ramp> <label>

ramp-0 = ÓÜ≠
ramp-1 = ÓÜÆ
ramp-2 = ÓÜ¨
ramp-foreground = #66

[module/battery]
type = internal/battery
full_at = 98
battery = BAT1
adapter = ADP1
poll-interval = 1

format-charging = B1 +<label-charging>
format-discharging = B1 -<label-discharging>
format-full = B1 <label-full>
animation-charging-framerate_ms = 750

[module/battery-total]
type = custom/script
exec = "sum=$(acpi -b | egrep -o '[0-9]{1,3}%' | tr -d '%' | xargs -I% echo -n '+%'); echo $(( sum ))%"
interval = 5
label=%output%
format=BAT <label>

[module/memory-simple]
type = internal/memory
format = <label>
label = RAM %gb_used% (%percentage_used%%)

[module/memory-extended]
type = internal/memory
format = <label> <bar-used>
