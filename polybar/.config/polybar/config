; For connected IP
;%{F#66}%local_ip% %{F#ff}

; <ramp-signal>
ramp-signal-0 = ‚ñÅ
ramp-signal-0-font = 2
ramp-signal-0-foreground =  ${colors.color1}
ramp-signal-1 = ‚ñÇ
ramp-signal-1-font = 2
ramp-signal-1-foreground =  ${colors.color3}
ramp-signal-2 = ‚ñÑ
ramp-signal-2-font = 2
ramp-signal-2-foreground =  ${colors.color3}
ramp-signal-3 = ‚ñÜ
ramp-signal-3-font = 2
ramp-signal-3-foreground = ${colors.color2}
ramp-signal-4 = ‚ñá
ramp-signal-4-font = 2
ramp-signal-4-foreground =  ${colors.color2}

;ramp-signal-0 = 1
;ramp-signal-1 = 2
;ramp-signal-2 = 3
;ramp-signal-3 = 4
;ramp-signal-4 = 5
;ramp-signal-5 = 6

